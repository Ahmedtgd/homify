{
    "name": "markushaug/homify",
    "description": "Modular home automation system",
    "keywords": ["smarthome", "laravel", "php", "homify", "homebridge", "alexa", "homekit", "modular", "alexa-support"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "atnic/laravel-light-bootstrap-dashboard": "^0.2.1",
        "fideloper/proxy": "~3.3",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0",
        "markushaug/homify-exec": "dev-master",
        "markushaug/homify-module-installer": "dev-master",
        "markushaug/homify-rfoutlet": "dev-master",
        "markushaug/homify-sonos": "dev-master",
        "nwidart/laravel-modules": "^2.6"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~6.0",
        "reliese/laravel": "^0.0.13"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "Modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "mkdir Modules",
            "mkdir Modules/Things",
            "mkdir Modules/Bindings",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "minimum-stability": "dev-master",
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
